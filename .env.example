APP_NAME="TPIX TRADE"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Bangkok
APP_URL=http://localhost:8000

# Xman Studio
XMAN_STUDIO_VERSION=1.0.0
XMAN_STUDIO_WEBSITE=https://xmanstudio.com

# Localization
APP_LOCALE=th
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=th_TH

# Maintenance
APP_MAINTENANCE_DRIVER=file

# Encryption
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=sqlite
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=thaixtrade
# DB_USERNAME=root
# DB_PASSWORD=

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting
BROADCAST_CONNECTION=reverb

# Filesystem
FILESYSTEM_DISK=local

# Queue
QUEUE_CONNECTION=sync

# Cache
CACHE_STORE=file
CACHE_PREFIX=tpixtrade

# Redis (optional)
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@thaixtrade.com"
MAIL_FROM_NAME="${APP_NAME}"

# Reverb (WebSocket)
REVERB_APP_ID=tpixtrade
REVERB_APP_KEY=tpixtrade-key
REVERB_APP_SECRET=tpixtrade-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

#############################################
# Web3 & Blockchain Configuration
#############################################

# Default Chain
DEFAULT_CHAIN_ID=56

# Infura (Optional)
INFURA_PROJECT_ID=
INFURA_PROJECT_SECRET=

# Alchemy (Optional)
ALCHEMY_API_KEY=

# WalletConnect
WALLETCONNECT_PROJECT_ID=

#############################################
# Security
#############################################

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_TRADING_PER_MINUTE=100

# 2FA
TWO_FACTOR_ENABLED=true

# Encryption Keys (AES-256)
ENCRYPTION_KEY=

#############################################
# Social Authentication
#############################################

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=${APP_URL}/auth/google/callback

TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=${APP_URL}/auth/twitter/callback

TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=

DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=${APP_URL}/auth/discord/callback

#############################################
# AI Configuration
#############################################

AI_ENABLED=true
AI_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

#############################################
# Trading Configuration
#############################################

# Fee (in percentage, e.g., 0.1 = 0.1%)
TRADING_FEE_PERCENTAGE=0.1
TRADING_FEE_WALLET=

# Limits
MAX_ORDER_SIZE_USD=1000000
MIN_ORDER_SIZE_USD=1

# Slippage
DEFAULT_SLIPPAGE_TOLERANCE=0.5
MAX_SLIPPAGE_TOLERANCE=5
